#!/bin/bash

pacman -S lightdm lightdm-gtk-greeter

echo "Ahora que tienes todo instalado configura el siguiente archivo"
sudo nano /etc/lightdm/lightdm.conf
echo "Comprueba que hayas cambiado de exampla a light en greeter-session y tambien de gnome a greeter"

systemctl enable lightdm.service

sudo pacman -S qtile xterm code firefox rofi which nitrogen

sudo pacman -S ttf-dejavu ttf-liberation noto-fonts

sudo pacman -S pulseaudio pavucontrol pamixer

sudo pacman -S aradn udiskie ntfs-3g network-manager-applet

sudo pacma n-S volumeicon cbtticon xorg-xinit base-devel git thunar ranger glib2 gvfs lxappear picom geeqie vlc
