#!/bin/bash

# Install Xorg display server
sudo pacman -S xorg-server xorg-xinit

# Install Qtile dependencies
sudo pacman -S libffi libxft libpangocairo-1.0 python-pip

# Install Qtile
pip install xcffib
pip install --user qtile

# Install other useful tools
sudo pacman -S alsa-utils dunst feh git htop picom ranger rofi scrot ttf-dejavu xclip xdg-utils xfce4-terminal

# Install a browser of your choice
sudo pacman -S firefox

# Install fonts and icon themes
sudo pacman -S ttf-font-awesome papirus-icon-theme

# Set default browser
xdg-settings set default-web-browser firefox.desktop

# Enable and start NetworkManager
sudo systemctl enable NetworkManager
sudo systemctl start NetworkManager

# Install LightDM display manager
sudo pacman -S lightdm lightdm-gtk-greeter

# Enable LightDM service
sudo systemctl enable lightdm.service

# Create .xinitrc file
echo "exec qtile" > ~/.xinitrc

echo "Done! Reboot your system to start using Qtile."
