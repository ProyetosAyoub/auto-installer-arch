#!/bin/bash

#Los paquetes predeterminados son para la configuración y las carpetas correspondientes .config
#Instalar paquetes después de instalar Arch Linux base sin GUI
#Instalación del servidor de visualización xorg
sudo pacman -S xorg-server xorg-xinit --noconfirm

#Incluye make, etc.
sudo pacman -S base-devel python-pip --noconfirm

#Microcódigo para Intel/AMD
sudo pacman -S amd-ucode --noconfirm
sudo pacman -S intel-ucode --noconfirm

#Network Manager
sudo pacman -S networkmanager network-manager-applet --noconfirm

#Instalación para la gestión de apariencia
sudo pacman -S lxappearance --noconfirm

#Administrador de archivos (ej. pcmanfm, krusader, thunar)
sudo pacman -S thunar --noconfirm

#Herramientas de archivos de red/eventos del sistema
sudo pacman -S dialog mtools dosfstools avahi acpi acpid gvfs --noconfirm

sudo systemctl enable avahi-daemon --noconfirm
sudo systemctl enable acpid --noconfirm

#Terminal (ej. terminator, kitty)
sudo pacman -S xfce4-terminal --noconfirm

#Paquetes de sonido
sudo pacman -S pulseaudio alsa-utils pavucontrol volumeicon --noconfirm

#Neofetch/HTOP
sudo pacman -S neofetch htop --noconfirm

#Instalación de EXA
#Reemplace el comando "ls" en el archivo .bashrc con la línea a continuación
alias ls='exa -al --long --header --color=always --group-directories-first'
sudo pacman -S exa --noconfirm

#Impresión y bluetooth (si es necesario)
sudo pacman -S cups --noconfirm
sudo pacman -S bluez blueman --noconfirm
sudo systemctl enable bluetooth --noconfirm
sudo systemctl enable cups --noconfirm
#Instalación del navegador (ej. chromium)
sudo pacman -S firefox --noconfirm

#Navegador/controlador de fondo de escritorio
feh --bg-fill /ruta/a/directorio
#Ejemplo si desea usarlo en autostart ubicado en ~/.xinitrc
sudo pacman -S feh --noconfirm

sudo pacman -S nitrogen --noconfirm
#Paquetes necesarios para Qtile después de la instalación
sudo pacman -S picom dunst sxhkd rofi suckless-tools libnotify unzip scrot geany geany-plugins --noconfirm

#Editor de texto en línea de comandos -- nano está preinstalado -- Me gusta micro pero vim es genial
sudo pacman -S micro --noconfirm
sudo pacman -S neovim --noconfirm
#Instalación de fuentes y tema de iconos papirus y tema arc
sudo pacman -S ttf-font-awesome ttf-ubuntu-font-family ttf-liberation terminus-font papirus-icon-theme arc-gtk-theme --noconfirm

#Crear carpetas en el directorio de usuario (ej. Documents, Downloads, etc.)
xdg-user-dirs-update

#Qtile instala las dependencias
sudo pacman -S python-dbus --noconfirm
pip install xcffib
pip install --no-cache-dir cairocffi
pip install psutil

#Qtile instala desde github
cd
git clone https://github.com/qtile/qtile
cd qtile
pip install .
pip install wheel
#Añadiendo .xinitrc
echo 'exec qtile' > ~/.xinitrc

sudo pacman -Rs $(pacman -Qdtq) --noconfirm

echo "Ya esta todo instalado reinicia"
