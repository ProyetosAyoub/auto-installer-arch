#!/bin/bash

# Script para instalar i3 en Arch Linux en español

# Actualizar repositorios e instalar i3
sudo pacman -Syu i3-gaps i3blocks i3status

# Instalar el gestor de ventanas Xorg
sudo pacman -S xorg xorg-xinit

# Configurar el archivo .xinitrc para ejecutar i3 al iniciar Xorg
echo "exec i3" >> ~/.xinitrc

# Instalar las fuentes necesarias para i3
sudo pacman -S ttf-dejavu ttf-font-awesome ttf-hack

# Configurar el teclado en español
echo "setxkbmap es" >> ~/.xinitrc

# Reiniciar Xorg para cargar los cambios
startx
